import sys
if __name__ == "__main__":
    b = sys.argv
a = ""
for i in range(1, len(b)):
    a += b[i] 
    a += "  "
def Sqr(a):
    print("+", end="")
    for i in range(len(a)+3):
        print("-", end="")
    print("+")

Sqr(a)
print("| ", a,"|")
Sqr(a)

#input: python3 banner.py Hello from RTU MIREA! bash command
#output:  +-----------------------------+
#         |  Hello  from  RTU  MIREA!   |
#         +-----------------------------+
